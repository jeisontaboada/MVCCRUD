@model MVCCRUD.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Usuario</h1>

<h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
<div class="user-detail">
    <h4>Usuario</h4>
    <hr />
    <div class="detail-item">
        <span class="detail-title">Nombre:</span>
        <span class="detail-info">@Html.DisplayFor(model => model.Nombre)</span>
    </div>
    <div class="detail-item">
        <span class="detail-title">Apellido:</span>
        <span class="detail-info">@Html.DisplayFor(model => model.Apellido)</span>
    </div>
    <div class="detail-item">
        <span class="detail-title">DNI:</span>
        <span class="detail-info">@Html.DisplayFor(model => model.Dni)</span>
    </div>
</div>

<form asp-action="Eliminar" class="delete-form">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="delete-btn" /> |
    <a class="back-link" asp-action="Index">Volver a la lista</a>
</form>
